{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
            },
            "command": "cmake --log-level=VERBOSE -Wdev -DCMAKE_BUILD_TYPE=Debug -S . -B build && make -d -C build"
        },
        {
            "label": "dependencies",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
            },
            "command": "sh dependencies.sh"
        },
        {
            "label": "cpack",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
            },
            "command": "cd build && cmake ../ && cpack --config CPackConfig.cmake"
        }
    ]
}